<div class="toast align-items-center text-white mb-2 bg-<%= type %> border-0 show" role="alert" aria-live="assertive" aria-atomic="true" data-controller="toast">
  <div class="d-flex">
    <div class="toast-body">
      <%= message %>
    </div>
    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-action="click->toast#hide"></button>
  </div>
</div>
